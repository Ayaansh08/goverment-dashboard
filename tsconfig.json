{
  "compilerOptions": {
    "strict": false,           // disables strict type checking
    "noEmitOnError": false,    // allow emit even with errors
    "skipLibCheck": true,       // skips type checking for external libraries
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
  "@/*": ["./*"],
  "@/app/*": ["./app/*"],
  "@/lib/*": ["./app/lib/*"]
}

    
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
